---
import { SITE_ATHOUR } from "../../config";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";

const title = "Colophon";
const description = "Technical details about this site";

// Manually set the last updated date
const lastUpdated = "Last updated September 16, 2025";

---

<BaseLayout title={title} description={description}>
   <Header
    headerTitle={title}
    headerMeta={lastUpdated}
    headerType="blog-detail"
  />
  <main class="row">
    <div class="container flow">
      <div class="content flow">
        <!-- <p>Last updated Aug 11, 2023</p> -->
        <h2>Technical details</h2>
        <p>
          Designed and coded with VS Code. Staticly Built with <a
            href="https://astro.build/">Astro</a
          >. Deployed and hosted on <a href="https://www.netlify.com/"
            >Netlify</a
          >. Privacy-first, carbon conscious web analytics with <a
            href="https://withcabin.com/privacy/simoncoudeville.be">Cabin</a
          >. The source code is available open-source on <a href="">Github</a>
        </p>
        <h2>Typography</h2>
        <p>
          All of the text on this site is set in <a
            href="https://commercialtype.com/catalog/graphik">Graphik</a
          > regular. Designed by Christian Schwartz and released through Commercial Type.
        </p>
        <p>
          To avoid the additional download of another webfont, code blocks are
          set in the default monospaced font of the user's operating system.
        </p>

---
import { SITE_ATHOUR, formatDate } from "../config";
const { headerDate, headerTitle } = Astro.props;
---

<header class="row row--page-header js-page-header">
  <div class="container">
    <div class="page-header">
      <h2 class="logo">
        <a class="logo__link" href="/">{SITE_ATHOUR}</a>
      </h2>
      <span class="page-header__title color-meta">{headerTitle}</span>
      <time
        class="page-header__date color-meta text-date"
        datetime={headerDate}
      >
        {formatDate(headerDate)}
      </time>
    </div>
  </div>
</header>
